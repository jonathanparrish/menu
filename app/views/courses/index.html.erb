

<div class="inner-div">
<p id="notice"><%= notice %></p>
<p>&nbsp;</p>
<p>&nbsp;</p>
<h2>Course</h2>

<table>
  <thead>
    <tr>
      <th>Course Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>

      <tr>
        <td><%= course.name %> </td>
      </tr>
      <% course.items.each do |item| %>
        <td><%= item.name %> </td>
        <td><%= item.description %> </td>
        <td><%= item.price %> </td>
      </tr>
      <br>
      <% end %>
    <% end %>
  </tbody>
</table>
<br>
